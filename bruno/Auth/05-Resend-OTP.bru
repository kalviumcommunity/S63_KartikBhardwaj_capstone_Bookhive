meta {
  name: Resend OTP
  type: http
  seq: 5
}

post {
  url: {{baseUrl}}/auth/resend-otp
  body: json
  auth: none
}

headers {
  Content-Type: application/json
}

body:json {
  {
    "email": "{{testEmail}}",
    "userId": "{{userId}}"
  }
}

assert {
  res.status: eq 200
  res.body.message: contains "sent"
  res.body.otpId: isString
}

script:post-response {
  if (res.status === 200) {
    console.log("âœ… OTP resent successfully");
    console.log("ðŸ†” OTP ID:", res.body.otpId);
    if (res.body.previewUrl) {
      console.log("ðŸ“§ Preview URL:", res.body.previewUrl);
    }
  }
}